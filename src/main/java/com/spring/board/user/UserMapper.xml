<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.board.user.UserMapper">
    <!--        메소드 이름 -->
	<select id="selUserList" resultType="UserEntity">
		SELECT * FROM t_user
	</select>
	
	<select id="loginProc" resultType="UserEntity">
		
	</select>
	
	<!--  ' '없이 써야할때 # 사용 -->
	<insert id="insert_User"  parameterType="UserEntity">
		INSERT INTO t_user ( user_id, user_pw, salt, nm, gender, phone ) 
		VALUES  ( #{user_id}, #{user_pw}, '', #{nm}, #{gender}, #{phone} )
	</insert> 

</mapper>